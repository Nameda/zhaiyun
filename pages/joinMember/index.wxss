/* 加入会员 */
page{
    background: #f1f1f1;
}
/* banner */
.banner-box{
    width: 100%;
    height: 280rpx;
}
.banner-box image{
    width: 100%;
    height: 100%;
}
/* 会员 类型 */
.member-type-wraper{
    background: #fff;
    padding:30rpx;
    margin-top: 20rpx;
}
.member-type-wraper .member-type{
    width: 690rpx;
    height: 240rpx;
    border-radius: 10rpx;
}
.member-type-wraper .type1{
    background: #FBE9DD;
    border:2rpx solid #DB854E;
    margin-bottom: 35rpx;
    box-shadow:0rpx 7rpx 8rpx 2rpx rgba(255,99,0,0.18);
}
.member-type-wraper .type2{
    background: #fff;
    border:2rpx solid #FFD32F;
}
.member-type-wraper .member-type .member-type-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    vertical-align: middle;
    padding: 14rpx 16rpx 0rpx;
    font-size: 24rpx;
}
.member-type .member-type-header .header-left{
    color: #000;
    display: flex;
    vertical-align: middle;
    align-items: center;
}
.member-type .member-type-header .header-left image{
    width: 50rpx;
    height: 50rpx;
    margin-right: 21rpx;
}
.member-type .member-type-header .header-left text{
    position: relative;
    top: 4rpx;
}
.member-type .member-type-header .header-right{
    color: #FF1E1E;
}
.member-type .member-tips{
    font-size:18rpx;
    color:#333;
    line-height:32rpx;
    margin-left: 87rpx;
    margin-right: 152rpx;
}
.member-type .member-tips .tip{
    display: flex;
}
/* 微信支付 */
.wechat-wraper{
    height: 180rpx;
    width: 100%;
    background: #fff;
    margin-top: 20rpx;
}
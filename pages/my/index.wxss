/**个人中心**/
page{
  background: #f1f1f1;
}
/* 个人信息 */
.userinfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #000;
  height: 280rpx;
  width: 100%;
  box-sizing: border-box;
  padding:0 30rpx;
  color: #fff;
  font-size: 24rpx;
}
.userinfo .info{
  display: flex;
}
.userinfo .info .right-info{
  padding-left: 20rpx;
  font-weight: 400;
}
.userinfo .info .right-info .name{
  padding-bottom: 25rpx;
}
.userinfo .info .right-info .bind-phone{
  width:150rpx;
  height:38rpx;
  background:#fff;
  border-radius:19rpx;
  color: #000;
  text-align: center;
  line-height: 38rpx;
}
.userinfo .info .user-pic image{
  width: 89rpx;
  height: 89rpx;
  border-radius: 50%;
}
.userinfo .edit-entry{
  vertical-align: middle;
}
.userinfo .edit-entry image{
  width: 20rpx;
  height:20rpx;
  margin-left: 17rpx;
}
/* 钱包 会员 */
.money-wraper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 118rpx;
  line-height: 118rpx;
  background: #fff;
  width: 100%;
  margin-bottom: 14rpx;
}
.money-wraper .money-box{
  display: flex;
  vertical-align: middle;
  color: #000;
  padding-left: 35rpx;
}
.money-wraper .money-box .money{
  font-size: 30rpx;
  padding-right: 35rpx;
}
.money-wraper .wallet-box{
  font-size: 24rpx;
}
.money-wraper .wallet-box image{
  width: 20rpx;
  height: 20rpx;
  padding-left: 9rpx;
}
.money-wraper .btns-box{
  padding-right: 30rpx;
}
.money-wraper .btns-box .btn{
  display: inline-block;
  line-height: 46rpx;
  height: 46rpx;
  width: 150rpx;
  background: #000;
  color: #fff;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-left: 45rpx;
  text-align: center;
}
/* 我的收藏 */
.collect-wraper{
  background: #fff;
  padding:16rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 14rpx;
}
.collect-wraper .collect-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  vertical-align: middle;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}
.collect-wraper .collect-header image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 9rpx;
}
.collect-wraper .collect-items {
  height: 127rpx;
  display: flex;
  justify-content: space-between;
}
.collect-wraper .collect-items .collect-item{
  width: 217rpx;
  height: 127rpx;
  display: flex;
  align-items: center;
  font-size: 14rpx;
  background-image:url('data:image/png;base64,');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.collect-wraper .collect-item .item-pic{
  padding-left: 11rpx;
  padding-right: 20rpx;
}
.collect-wraper .collect-item .item-pic image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.collect-wraper .collect-item .item-info .name{
  font-size: 18rpx;
  padding-bottom: 20rpx;
}
/* 功能项 */
.fun-items{
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 26rpx 30rpx;
  font-size: 24rpx;
}
.fun-items .fun-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  vertical-align: middle;
  height: 94rpx;
  border-bottom: 1rpx solid #C5C5C5;
}
.fun-items image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 9rpx;
}